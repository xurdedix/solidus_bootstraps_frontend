<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div class="col-md-6 col-md-offset-3" id="forgot-password">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('spree.forgot_password') %></h3>
    </div>
    <div class="panel-body">
      <p><%= t('spree.instructions_to_reset_password') %></p>

      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
        <p>
          <%= f.label :email, t('spree.email') %><br />
          <%= f.email_field :email, :class => "form-control" %>
        </p>
        <p>
          <%= f.submit t('spree.reset_password'), :class => 'btn btn-lg btn-success btn-block' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
